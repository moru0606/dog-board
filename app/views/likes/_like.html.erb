<% if logged_in? %>
  <% if current_user.like?(post)  %> 
      <p><%=link_to post_likes_path(post), method: :delete do %></p>
      <i class="fas fa-heart unlike-btn"></i>
      <% end %>
  <% else %>
      <p><%=link_to post_likes_path(post), method: :post do %></p>
      <i class="far fa-heart unlike-btn"></i>
  <% end %>
  <% end %>

  <p><span>お気に入り数: </span><%= post.likes.count %></p>
<% end %>

