<%= form_with(model:[ @post, @post.comments.build ], local:true) do |form| %>

<div class="form-group">
    <p>
        <%= form.label :コメント %><br>
        <%= form.text_field :comment,class: 'form-control' %>
    </p>
</div>
    <div class="form_action row">
        <%= form.submit 'コメント投稿',class: 'btn btn-primary' %>
    </div>
    
<% end %>